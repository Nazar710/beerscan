

<div class="card-index-container">
  <% @beers.each do |beer| %>
    <div class="card-index">
      <div class="img-card-index">
        <%= cl_image_tag(beer.photo) %>
      </div>

      <div class="info-card-index">
        <div class="name-space">
        <h3><%= beer.name %></h3>
        </div>
        <div class="d-flex justify-content-left">
          <%= render 'shared/star-form', beer: beer %>
        </div>
        <p><%= beer.category.name %></p>
        <p><%= beer.brewery.country.name %></p>
         <%= link_to "See more", beer_path(beer), class: "card-btn" %>
      </div>
    </div>
  <%= render "shared/navbar" %>
  <% end %>
</div>





