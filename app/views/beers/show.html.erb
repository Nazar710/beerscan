<div class="card-index-background"></div>
  <div class="card-index-container">
    <div class="card-show-white-box">
      <div class="blidding-brown-card" >
        <%= cl_image_tag @beer.photo, alt: "beer-image", class: "beer-size" %>
      </div>
      <div class="alcohol-card"></div>
      <h6 class="alcohol-percent">alcohol:<br><%= @beer.alcohol %>%</h6>
      <%= image_tag "alcohol.png", alt: "alcohol", class: "size-alcohol-icon" %>
      <div class="card-new-title">
        <h2><%= @beer.name %></h2>
        <h5><%= @beer.category.name %> - <%= @beer.brewery.name %></h5>
        <h5><%= @beer.brewery.country.name %></h5>
      </div>
      <div class="d-flex justify-content-left">
        <% @beer.rating.times do %>
          <%= image_tag "beer-active-green-icon.png", alt: "beer-active", class: "size-rate-icon" %>
        <% end %>
        <% (5 - @beer.rating).times do %>
          <%= image_tag "beer-inactive-gray-icon.png", alt: "beer-inactive", class: "size-rate-icon" %>
        <% end %>
      </div>
      <div class="beer-description-card">
        <p><%= @beer.category.description %></p>
      </div>
      <div class="criteries-card">
        <%= image_tag "thermometer.png", alt: "thermometer", class: "size-criteries-icon" %>
        <%= image_tag "minus.png", alt: "line", class: "size-criteries-icon" %>
        <%= image_tag "glass.png", alt: "glass", class: "size-criteries-icon"%>
        <%= image_tag "minus.png", alt: "line", class: "size-criteries-icon" %>
        <%= image_tag "lemon.png", alt: "lemon", class: "size-criteries-icon bitterness-icon" %>
        <%= image_tag "minus.png", alt: "line", class: "size-criteries-icon" %>
        <%= image_tag "food.png", alt: "food", class: "size-criteries-icon" %>
      </div>
      <div class="criteries-content-card">
        <div class="temperature-position">
          <p><strong><span class="orange-text"><%= @beer.temperature %> Â°C</span></strong> is perfect for this beer</p>
          <h5>Temperature</h5>
        </div>
        <div class="glass-position">
          <p>Asks for a <strong><span class="orange-text"><%= @beer.glass.name %> glass</span></strong></p>
          <h5>Ideal Glass</h5>
        </div>

        <div class="bitterness-position">
          <p>This beer is <strong><span class="orange-text"><%= @beer.ibu %> IBU</span></strong></p>
          <h5>Bitterness</h5>

          <div class="info-popup">
            <div class="content">
              <i class="fas fa-info-circle"></i>
              <div>International Bitterness Units are a chemical measurement of the number of bittering compounds. Most beers will have a measured IBU between <strong>5</strong> (which is a very low) up to <strong>120</strong> (which is a very high).</div>
            </div>
          </div>

        </div>

        <div class="food-position">
          <p>Enjoy with
          <% @beer.foods.each do |food| %>
          <strong><span class="orange-text"><%= food.name %></span></strong>
          <% end %>
          </p>
        </div>
      </div>
        <div class="beer-story-card beer-story-card-content">
            <h5>About this beer:</h5>
           <p class="truncate"><strong><%= @beer.beer_story%></strong></p>
          <div class="beer-story-icon-card">
            <%= image_tag "beer-active-green-icon.png", alt: "beer-icon", class: "green-beer-icon" %>
          </div>
        </div>

    </div>
    <%= render "shared/navbar" %>
  </div>

<script>
  $(".alert" ).hide();
  $(".notice" ).hide();
</script>
